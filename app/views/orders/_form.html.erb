<div class="shopper-informations">
    <div class="container">    
        <div class="row">
            <div class="col-sm-6">
                <div class="shopper-info">
                    <p>Please Enter Your Detail</p>
                    <%= form_for @order do |f| %>
                        <%= render 'shared/msg' %>

                    <div class="form-group">
                        <%= f.label :name %>
                        <%= f.text_field :name, size: 40, class: 'form-control' %>
                    </div>    

                    <div class="form-group">
                        <%= f.label :email %>
                        <%= f.email_field :email, size: 40, class: 'form-control' %>
                    </div>   

                    <div class="form-group">
                        <%= f.label :address %>
                        <%= f.text_area :address, cols: 40, class: 'form-control' %>
                    </div>   

                    <div class="form-group">
                        <%= f.label :city %>
                        <%= f.text_field :city, size: 40, class: 'form-control' %>
                    </div>      

                    <div class="form-group">
                        <%= f.label :country %>
                        <%= f.text_field :country, size: 40, class: 'form-control' %>
                    </div>         

                    <div class="form-group">     
                                      
                        <%= f.submit 'Place Order', class: "btn btn-success" %>
                    </div>  
                    
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
