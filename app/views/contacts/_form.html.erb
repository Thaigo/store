<div class="row">  	
	    		<div class="col-sm-8">
	    			<div class="contact-form">
	    				<h2 class="title text-center">Get In Touch</h2>
	    				<div class="status alert alert-success" style="display: none"></div>
              <%= form_for @contact do |f| %>
              <%= render 'shared/contact_errors' %>
				    	<form id="main-contact-form" class="contact-form row" name="contact-form" method="post">
				            <div class="form-group col-md-6">
				                 <%= f.label :name %>
                         <%= f.text_field :name, size: 40, class: 'form-control' %>
				            </div>
				            <div class="form-group col-md-6">
				                <%= f.label :email %>
                        <%= f.email_field :email, size: 40, class: 'form-control' %>
				            </div>
				            
				            <div class="form-group col-md-12">
				                <%= f.label :message %>
                        <%= f.text_area :message, cols: 40, class: 'form-control' %>
				            </div>                        
				            <div class="form-group col-md-12">				                
                        <%= f.submit 'Send', class: "btn btn-primary pull-right" %>
				            </div>
				        </form>
                <%end%>
	    			</div>
	    		</div>
	    		<div class="col-sm-4">
	    			<div class="contact-info">
	    				<h2 class="title text-center">Contact Info</h2>
	    				<address>
